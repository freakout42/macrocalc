		mcelladr.h mcgetmnu.h mcdisply.h

mcdisply.o:	mcdisply.c mc.h mcput.h mcutil.h mcell.h mcwindow.h mcrecalc.h \
		mcfileio.h

mcget.o:	mcget.c mc.h

mcput.o:	mcput.c mc.h

