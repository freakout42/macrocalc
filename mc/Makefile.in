mcellact.o:	mcellact.c mc.h mcparse.h mcutil.h mcell.h mccalc.h mcrecalc.h \
		mcmessag.h mcdisply.h mcfileio.h

mcellval.o:	mcellval.c mc.h mcell.h mcellstr.h mcellpar.h mcmessag.h

mcellpar.o:	mcellpar.c mc.h mcell.h mcellstr.h mcparse.h

mcellstr.o:	mcellstr.c mc.h mctime.h mcell.h mcellact.h

